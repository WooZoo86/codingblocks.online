<div class="container-main">
  <div class="children">
  </div>
  <div class="text">
    &lt;&nbsp; Learn to code interactively &nbsp;/&gt;
    <p>The interactive learning for aspiring and experienced developers</p>
  </div>
</div>
<div id="main-start" class=" main-wrapper main-wrapper-raised">
  <section>
    <div class="container-fluid">
      <div class="heading-container">
        <h2 class="heading-main">Recommended Courses</h2>
        <hr class="text">
        <i  class="collapse fa fa-chevron-down" aria-hidden="true"></i>
      </div>


      <div class="courses-section row container">
        {{#each model.recommendedCourses as |course|}}
          {{card-component course=course class="col-xs-12 col-sm-6 col-md-4 col-lg-4"}}
        {{/each}}
      </div>
      <div class="container justify-content-center text-center">
        {{#link-to 'courses' class='all-courses-btn' tagName='button'}}View All Courses{{/link-to}}
      </div>
    </div>
  </section>
</div>
{{foot-er}}