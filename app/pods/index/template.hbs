<div class="course-card-wrapper">
	<div class="container">
		<h2>Recommended Courses</h2>
		<ul class="course-cards">
			<div class="row">
				{{#each model.recommendedCourses as |course|}}
				<li class="course-card col-md-3">
					<div class="course-card-content">
						<div class="course-card-header">
							<img src="https://placehold.it/250x250/f26354/ffffff" alt="suicidal thoughts" />
							<h3>{{course.title}}</h3>
						</div>
						<div class="card-body">
							<p>{{course.subtitle}}</p>
							<strong><p>Rs. {{course.fees}}</p></strong>
							<p></p>
							{{#link-to 'courses.preview' course.id class='btn btn-primary'}}Enroll Now!{{/link-to}}
						</div>
					</div>
				</li>
				{{/each}}
			</div>
		</ul>
	</div>
</div>

