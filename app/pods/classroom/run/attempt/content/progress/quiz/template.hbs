
{{#each quizSubmission.questionSubmissions as |questionSubmission index|}}

<div class="card">
    <div class="card-block">
        <h4 class="card-title">Question (Score: {{questionSubmission.score}}) - {{if questionSubmission.isCorrect 'Correct!' 'Wrong!'}} </h4>
        <ul class="question_choices">
        {{#each questionSubmission.question.choices as |choice| }}
          <li class="{{if (contains questionSubmission.selectedChoices choice.id) 'selected'}}" > {{choice.text}} </li>
        {{/each}}
        </ul>
    </div>
</div>

{{/each}}


{{outlet}}
