<div class="row">
    <div class="col-9">
      {{outlet}}
    </div>
  <div class="col-3 sections">
    <h4 class="ui header">{{course.title}}</h4>
    <div class="just-padding">
      <div class="list-group list-group-root well">
        {{#each sections as |section| }}
          <a href="#" class="list-group-item">{{section.name}}</a>
          <div class="list-group">
            {{#each section.contents as |content| }}
              {{#link-to 'classroom.run.attempt.content' content.id class="list-group-item"}}{{content.payload.name}}{{/link-to}}
            {{/each}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>